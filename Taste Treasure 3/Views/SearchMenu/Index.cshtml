<body>
    <div class="primary">
        <nav class="navbar">
            <!-- Navbar content -->
        </nav>
        <section class="discover">
            <div class="slide1 mt-4 ms-5">
                <section>
                    <h1>
                        Search & Explore Your Favorite <br /> Recipes
                    </h1>
                </section>
                <div class="searchBar d-flex">
                    <input type="text" class="search col-6 ps-5 border-0 font-weight-normal" placeholder="Enter Recipe or Ingredients">
                    <button id="srcMenu" class="srcMenu btn ms-3 col-1 d-flex align-items-center justify-content-center">
                        Search
                    </button>
                </div>
                @* <div class="filter d-flex mt-3">
                    <button id="srcNew" class="srcNew btn col-1 d-flex align-items-center justify-content-center">
