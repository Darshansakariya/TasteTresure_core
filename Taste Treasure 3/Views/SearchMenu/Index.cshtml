            </div>
        </section>
        <!-- Content wrapper -->
        <div class="content-wrapper container-fluid d-flex mb-0">
            <div class="container menu-content-pic d-flex flex-column mt-5 ms-5">
                <!-- Recipe cards -->
                <!-- Example card -->
                <div class="content-wrapper row mb-5">
                    <div class="content col-lg-4 col-md-5 col-sm-7 mb-5">
                        <img id="food-image" src="~/images/item1.webp" alt="Food Image" style="cursor: pointer; border-radius: 8px;">
                    </div>
                    <div class="content-title col-lg-8 col-md-7 col-sm-5">
                        <h5>Chocolate Shake</h5>
                        <div>
                            <p class="mb-0">Ingredients:</p>
                            <h5>Chocholate</h5>
                            <h5>Milk</h5>
                            <h5>Kitkat</h5>
                            <h5>Oreo</h5>
                        </div>
                        <div class="filter d-flex mt-3">
                            <button id="srcLikes" class="srcLikes btn col-1 d-flex align-items-center justify-content-center">
                                10 likes - 12 Comments - 3 bookmarks
                            </button>
                        </div>
                    </div>
                </div>
                <div class="content-wrapper row mb-5">
                    <div class="content col-lg-4 col-md-5 col-sm-7 mb-5">
                        <img id="food-image" src="~/images/burger1.jpg" alt="Food Image" style="cursor: pointer; border-radius: 8px;" />
                    </div>
                    <div class="content-title col-lg-8 col-md-7 col-sm-5">
                        <h5>Burger</h5>
                        <div>
                            <p class="mb-0">Ingredients:</p>
                            <h5>Cheese</h5>
                            <h5>Onion</h5>
                            <h5>Tomato</h5>
                            <h5>Bun</h5>
                        </div>
                        <div class="filter d-flex mt-3">
                            <button id="srcLikes" class="srcLikes btn col-1 d-flex align-items-center justify-content-center">
                                10 likes - 12 Comments - 3 bookmarks
                            </button>
                        </div>
                        <!-- Other content -->
                    </div>
                </div>
                <div class="content-wrapper row mb-5">
                    <div class="content col-lg-4 col-md-5 col-sm-7 mb-5">
                        <img src="~/images/cheese_maggie.webp" height="300" width="300" alt="Food Image" style="cursor: pointer; border-radius: 8px;" />
                    </div>
                    <div class="content-title col-lg-8 col-md-7 col-sm-5">
                        <h5>Cheese Maggie</h5>
                        <div>
                            <p class="mb-0">Ingredients:</p>
                            <h5>Cheese</h5>
                            <h5>Maggie</h5>
                            <h5>Maggie Masala</h5>
                            <h5>Vegitables</h5>
                        </div>
                        <div class="filter d-flex mt-3">
                            <button id="srcLikes" class="srcLikes btn col-1 d-flex align-items-center justify-content-center">
                                10 likes - 12 Comments - 3 bookmarks
                            </button>
                        </div>
                    </div>
                </div>
                <!-- End of example card -->
            </div>
        </div>
        <!-- Pagination -->
        <div class="container-fluid pagination justify-content-center row mb-5">
            <button id="btn-prev" class="btn btn-warning btn-prev col-lg-1" disabled>
                Previous
            </button>
            <span class="col-lg-2  text-center">Page 1 of 1</span>
            <button id="btn-next" class="btn btn-warning btn-next col-lg-1">
                Next
            </button>
        </div>
        <footer class="footer">
            <!-- Footer content -->
        </footer>
    </div>
