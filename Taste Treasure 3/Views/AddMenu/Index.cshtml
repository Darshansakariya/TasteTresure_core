@{
    ViewData["Title"] = "AddMenu";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>AddMenu</title>
    <link href="~/css/addmenu.css" rel="stylesheet" />
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;500;600;700&display=swap" rel="stylesheet">
</head>
<body>
    <section id="content" class="d-flex justify-content-center" style="height: 100vh;">
        <div class="content-container w-50 h-50 d-flex flex-column">
            <form method="post" action="#" class="addFile w-100 pt-3 rounded" enctype="multipart/form-data">
                <div class="addPhoto bg-light h-50 mb-2 mt-5 text-center rounded">
                    <div class="upload-area">
                        <img id="previewImage" src="#" alt="Preview Image" style="display: none; max-width: 100%; max-height: 100%;">
                    </div>
                    <input type="file" name="PhotoFile" class="upload-image form-control visually-hidden" id="imageUpload" accept="image/*" onchange="previewImage()" />
                </div>
                <div class="upload w-100 mb-2 p-1 text-center">
                    <label for="imageUpload">Add Photo</label>
                </div>
                <div class="form-group">
                    <input type="text" name="Title" class="form-control" placeholder="Title" />
                </div>
                <div class="addIngredients w-100 mb-0 mb-md-3 pt-2 rounded">
                    <div class="form-floating">
                        <textarea class="w-100 rounded-2 ps-3 pt-3 ms-0" placeholder="Ingredients" name="Ingredients" style="height: 150px;"></textarea>
                    </div>
                </div>
                <div class="category">
                    <select class="selectCategory form-select w-25" name="CategoryId" id="floatingSelect" aria-label="Floating label select example">
                        <option value="0">Category</option>
                        <option value="1">Appetizer</option>
                        <option value="2">Main Course</option>
                        <option value="3">Dessert</option>
                    </select>
                </div>
                <div class="buttonPost mt-3 mb-5 d-flex justify-content-center align-items-center">
                    <button type="submit" class="post btn w-50 rounded text-center mb-5">Add Recipe</button>
                </div>
            </form>
        </div>
    </section>

    <script>
        function previewImage() {
            var preview = document.getElementById('previewImage');
            var file = document.getElementById('imageUpload').files[0];
            var reader = new FileReader();

            reader.onloadend = function () {
                preview.src = reader.result;
                preview.style.display = 'block';
            };

            if (file) {
                reader.readAsDataURL(file);
            } else {
                preview.src = '';
                preview.style.display = 'none';
            }
        }
    </script>
</body>
</html>
